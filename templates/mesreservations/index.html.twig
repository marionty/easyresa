{% extends 'base.html.twig' %}

{% block title %}Hello MesreservationsController!{% endblock %}

{% block body %}
<div class="row mt-3 justify-content-center">
    <h1 class='text-center mb-5'>My reservations</h1>
    {% for reservation in reservations %}
        <div class="col-md-12 mb-5 d-flex justify-content-center">
            <div class="shadow card card-bg rounded-3" style="width: 40rem;">
                <div class="card-body">
                    <p>RÃ©servation de {{ reservation.room.name }} du {{ reservation.startDate|date('d/m/Y H:i') }} au {{ reservation.endDate|date('d/m/Y H:i') }}</p>
                    <div class="d-flex justify-content-center"> 
                        <form action={{ path('edit_reservation', {'id': reservation.id} ) }} method="post">
                            <button type="submit" class="btn btn-dark">Modifier</button>
                        </form>
                        <form action={{ path('delete_reservation', {'id': reservation.id} ) }} method="post">
                            <button type="submit" class="btn btn-warning mx-4">Supprimer</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}